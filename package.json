{
  "name": "hkl-website",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "start": "npm run dev --workspaces",
    "dev": "concurrently -n server,client -c auto \"npm:dev --workspace server\" \"npm:dev --workspace client\"",
    "install-all": "npm install --workspaces",
    "server": "npm run dev --workspace server",
    "client": "npm run dev --workspace client"
  },
  "workspaces": [
    "server",
    "client"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "dependencies": {
    "mongodb": "^6.19.0"
  }
}
